@using AKSoftware.Localization.MultiLanguages.Blazor
<MudNavMenu Bordered="true">
    <MudText Typo="Typo.h6" Class="px-4">PlannerApp</MudText>
    <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">V2.0 by AK Academy</MudText>
    <MudDivider Class="my-2" />
    <MudNavLink Href="/" Icon="@Icons.Filled.Home">@Language["Home"]</MudNavLink>
    <MudNavGroup Title="@Language["Plans"]" Expanded="true" Icon="@Icons.Filled.Notes">
        <MudNavLink Href="/plans" Icon="@Icons.Filled.List">@Language["PlansList"]</MudNavLink>
        <MudNavLink Href="/plans/form" Icon="@Icons.Filled.Add">@Language["AddPlan"]</MudNavLink>
    </MudNavGroup>
    <MudNavLink Href="/about" Icon="@Icons.Filled.QuestionAnswer">@Language["About"]</MudNavLink>
</MudNavMenu>

@code
{
    [Inject]
    public ILanguageContainerService Language { get; set; }

    protected override void OnInitialized()
    {
        Language.InitLocalizedComponent(this);
    }
}